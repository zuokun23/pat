#include<cstdio>
#include<algorithm>
using namespace std;
const int maxn = 1000;
int f[maxn][maxn] , dp[maxn][maxn];

int main(){
	
	int n;
	scanf("%d",&n);
	for(int i = 1 ; i <= n ; i++){
		for(int j = 1 ; j <= i ; j++){
			scanf("%d",&f[i][j]);//输入数据 
		}
	}
	//边界
	for(int i = 1 ; i <= n ; i++)
		dp[n][i] = f[n][i];
	for(int i = n-1 ; i >= 1 ; i--){
		for(int j = 1 ; j <= i ; j++){
			dp[i][j] = max(dp[i+1][j] , dp[i+1][j+1]) + f[i][j];//dp[1][1] = max(dp[2][1],dp[2][2]) + f[1][1];
		}
	} 
	printf("%d\n",dp[1][1]);
	return 0;
}
